<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Lensly.Controls">

    <ControlTheme x:Key="GlassSidebarTheme" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource SidebarBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource GlassBorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
    </ControlTheme>

    <ControlTheme x:Key="LiquidGlassTheme" TargetType="Border">
        <Setter Property="Background" Value="#80FFFFFF"/>
        <Setter Property="BorderBrush" Value="#20FFFFFF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="16"/>
    </ControlTheme>

    <ControlTheme x:Key="LiquidGlassDarkTheme" TargetType="Border">
        <Setter Property="Background" Value="#40303030"/>
        <Setter Property="BorderBrush" Value="#20FFFFFF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="16"/>
    </ControlTheme>

    <ControlTheme x:Key="FloatingToolbarTheme" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource ToolbarBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource GlassBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="100"/>
        <Setter Property="Padding" Value="6"/>
    </ControlTheme>

    <ControlTheme x:Key="PhotoGridItemTheme" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource TertiaryBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="ClipToBounds" Value="True"/>
    </ControlTheme>

    <ControlTheme x:Key="SidebarItemTheme" TargetType="ListBoxItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="8,1"/>
        <Setter Property="CornerRadius" Value="8"/>
    </ControlTheme>

    <ControlTheme x:Key="SidebarItemThemeSelected" TargetType="ListBoxItem" BasedOn="{StaticResource SidebarItemTheme}">
        <Style Selector="^:selected">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
        </Style>
        <Style Selector="^:selected TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </ControlTheme>

    <ControlTheme x:Key="InspectorPanelTheme" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource GlassTintBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource GlassBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Width" Value="280"/>
        <Setter Property="Padding" Value="16"/>
    </ControlTheme>

    <ControlTheme x:Key="EmptyStateTheme" TargetType="StackPanel">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Spacing" Value="16"/>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type controls:SegmentedControl}" TargetType="controls:SegmentedControl">
        <Setter Property="Background" Value="#1A000000"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}" CornerRadius="{TemplateBinding CornerRadius}" Padding="{TemplateBinding Padding}">
                    <Grid>
                        <!-- Selection indicator -->
                        <Border x:Name="PART_SelectionIndicator" 
                                Background="{TemplateBinding SelectionBrush}" 
                                CornerRadius="{TemplateBinding CornerRadius}" 
                                HorizontalAlignment="Left"
                                IsVisible="False">
                            <Border.Transitions>
                                <Transitions>
                                    <ThicknessTransition Property="Margin" Duration="0:0:0.2" Easing="CubicEaseOut"/>
                                    <DoubleTransition Property="Width" Duration="0:0:0.2" Easing="CubicEaseOut"/>
                                </Transitions>
                            </Border.Transitions>
                        </Border>
                        
                        <!-- Items -->
                        <ItemsControl x:Name="PART_ItemsControl" ItemsSource="{TemplateBinding Items}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" Padding="12,6" Cursor="Hand">
                                        <TextBlock Text="{Binding}" 
                                                   FontWeight="Medium" 
                                                   FontSize="13" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center">
                                            <TextBlock.Tag>
                                                <MultiBinding Converter="{x:Static controls:EqualityMultiConverter.Instance}">
                                                    <Binding/>
                                                    <Binding Path="SelectedItem" RelativeSource="{RelativeSource AncestorType=controls:SegmentedControl}"/>
                                                </MultiBinding>
                                            </TextBlock.Tag>
                                            <TextBlock.Styles>
                                                <Style Selector="TextBlock[Tag=True]">
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Style>
                                                <Style Selector="TextBlock[Tag=False]">
                                                    <Setter Property="Foreground" Value="{DynamicResource LabelBrush}"/>
                                                </Style>
                                            </TextBlock.Styles>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
    
</ResourceDictionary>
