<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <FontFamily x:Key="SystemFont">avares://Avalonia.Fonts.Inter#Inter</FontFamily>

    <x:Double x:Key="FontSizeCaption">11</x:Double>
    <x:Double x:Key="FontSizeFootnote">13</x:Double>
    <x:Double x:Key="FontSizeSubhead">15</x:Double>
    <x:Double x:Key="FontSizeBody">17</x:Double>
    <x:Double x:Key="FontSizeTitle">20</x:Double>
    <x:Double x:Key="FontSizeLargeTitle">28</x:Double>
    <x:Double x:Key="FontSizeDisplay">34</x:Double>

    <CornerRadius x:Key="SmallCornerRadius">4</CornerRadius>
    <CornerRadius x:Key="MediumCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="LargeCornerRadius">12</CornerRadius>
    <CornerRadius x:Key="XLargeCornerRadius">16</CornerRadius>
    <CornerRadius x:Key="PillCornerRadius">100</CornerRadius>

    <Thickness x:Key="SmallPadding">4</Thickness>
    <Thickness x:Key="MediumPadding">8</Thickness>
    <Thickness x:Key="LargePadding">16</Thickness>
    <Thickness x:Key="XLargePadding">24</Thickness>

    <x:Double x:Key="SidebarWidth">220</x:Double>
    <x:Double x:Key="ToolbarHeight">52</x:Double>
    <x:Double x:Key="TitleBarHeight">38</x:Double>

</ResourceDictionary>
